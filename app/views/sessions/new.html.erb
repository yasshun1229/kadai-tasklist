<h1>ログイン</h1>

<div class="login_form">
  
  <%= form_with(url: login_path, scope: :session) do |f| %>
  
    <section class="email">
      <%= f.label :email, "Eメール" %>
      <%= f.email_field :email %>
    </section>
    
    <section class="password">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </section>
  
    <%= f.submit "ログイン" %>
  <% end %>
  
  <p><%= link_to "ユーザ登録していない方はこちら", signup_path %></p>
  
</div>