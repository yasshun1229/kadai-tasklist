<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div id = "error_explanation">
      <ul>
        <% tasks.errors.full_tasks.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, "メッセージ" %>
  <%= f.text_field :content %>
    
  <%= f.label :status, "ステータス" %>
  <%= f.text_field :status %>
  
  <%= f.submit "追加" %>
<% end %>